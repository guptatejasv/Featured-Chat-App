<style>
  body {
    font-family: Arial, sans-serif;
    background: linear-gradient(135deg, #6d5bba, #8d58bf);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    color: #fff;
  }

  h1 {
    text-align: center;
    margin-bottom: 20px;
    font-size: 2.5rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  }

  form {
    background-color: rgba(255, 255, 255, 0.1);
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    max-width: 400px;
    width: 100%;
  }

  input[type="text"],
  input[type="email"],
  input[type="password"] {
    width: calc(100% - 20px);
    padding: 10px;
    margin: 10px 0;
    border-radius: 5px;
    border: none;
    font-size: 1rem;
    background: rgba(255, 255, 255, 0.8);
    color: #333;
  }

  input[type="submit"] {
    width: 100%;
    padding: 12px;
    background-color: #00c853;
    border: none;
    border-radius: 5px;
    color: #fff;
    font-size: 1.2rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  input[type="submit"]:hover {
    background-color: #00e676;
  }

  p {
    margin-top: 20px;
    text-align: center;
    font-size: 1rem;
  }

  .ai-hint {
    font-size: 0.9rem;
    color: #ffeb3b;
    margin: 5px 0;
  }
</style>
<h1>VibeWire Chat Application</h1>
<h1>Register</h1>
<form action="" method="POST">
  <input
    type="text"
    name="name"
    id="name"
    required
    placeholder="Enter your Name"
  />
  <br /><br />
  <input
    type="email"
    name="email"
    id="email"
    required
    placeholder="Enter your Email"
  />
  <br /><br />
  <input
    type="password"
    name="password"
    id="password"
    required
    placeholder="Enter password"
  />
  <br /><br />
  <input
    type="password"
    name="passwordConfirm"
    id="passwordConfirm"
    required
    placeholder="Enter password Again"
  />
  <br /><br />
  <input
    type="submit"
    name="submit"
    id="submit"
    value="Sign Up"
    placeholder="Enter Password Again"
  />
</form>

<% if(typeof message != 'undefined'){ %>
<p style="color: green"><%= message %></p>
<% } %>
